.mouse-devil {
    display: none;
    justify-content: center;
    align-items: center;
    width: 60px;
    height: 60px;
    pointer-events: none;
    position: fixed;
    z-index: 999;
    border-radius: 100%;
    backdrop-filter: invert(0.8);
    box-shadow: inset 0 0 8px 0px black;

    @media (max-width: 1024px) {
        display: none !important;
    }
}